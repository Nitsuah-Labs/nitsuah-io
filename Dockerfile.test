# Dockerfile for running Playwright tests in a consistent environment
# Uses production build to ensure all pages are pre-compiled

FROM mcr.microsoft.com/playwright:v1.56.1-noble

# Set working directory
WORKDIR /app

# Copy package files first for better layer caching
COPY package.json package-lock.json ./

# Install dependencies (use ci for faster installs with lock file)
RUN npm ci --legacy-peer-deps --prefer-offline

# Copy project files
COPY . .

# Build for production (pre-compiles all pages, more stable than dev mode)
# Skip wagmi codegen since it requires API keys not available in test environment
RUN npm run build:skip-wagmi

# Set environment variables for tests
ENV CI=true
ENV NODE_ENV=production
ENV NEXT_PUBLIC_TEST_HELPERS=1

# Expose port for production server
EXPOSE 3000

# Default command runs all tests
CMD ["npx", "playwright", "test"]
