# Dockerfile for running Playwright tests in a consistent environment
# This eliminates dev/CI rendering differences and makes visual tests stable

FROM mcr.microsoft.com/playwright:v1.56.1-noble

# Set working directory
WORKDIR /app

# Copy package files first for better layer caching
COPY package.json package-lock.json ./

# Install dependencies (use ci for faster installs with lock file)
RUN npm ci --legacy-peer-deps --prefer-offline

# Copy project files
COPY . .

# Build the application
RUN npm run build:ci

# Set environment variables for tests
ENV CI=true
ENV NODE_ENV=production

# Expose port for dev server (if needed)
EXPOSE 3000

# Default command runs all tests
CMD ["npx", "playwright", "test"]
