# Environment Variables Template for nitsuah.io
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to git!

# ====================
# Site Configuration
# ====================
NEXT_PUBLIC_SITE_URL=https://nitsuah.io
NEXT_PUBLIC_SITE_NAME="Austin J. Hardy Portfolio"

# ====================
# Social Media
# ====================
NEXT_PUBLIC_GITHUB_USERNAME=nitsuah
NEXT_PUBLIC_TWITTER_USERNAME=nitsuah

# ====================
# Web3 Configuration
# ====================
# Etherscan API for contract verification
ETHERSCAN_API_KEY=

# Alchemy for Web3 provider
NEXT_PUBLIC_ALCHEMY_API_KEY=

# WalletConnect for wallet connection
# NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=

# Infura alternative provider
# NEXT_PUBLIC_INFURA_PROJECT_ID=

# ====================
# Smart Contract Addresses
# ====================
# Update these with your deployed contract addresses
# NEXT_PUBLIC_NFT_CONTRACT_ADDRESS=0x...
# NEXT_PUBLIC_DOMAIN_CONTRACT_ADDRESS=0x...
# NEXT_PUBLIC_TOKEN_CONTRACT_ADDRESS=0x...

# ====================
# Analytics (Optional)
# ====================
# Google Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Plausible Analytics (privacy-friendly alternative)
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=nitsuah.io

# ====================
# Development
# ====================
NODE_ENV=development

# Disable Next.js telemetry
# NEXT_TELEMETRY_DISABLED=1

# Bundle analyzer
# ANALYZE=false

# ====================
# External Services (Future)
# ====================
# Error tracking
# SENTRY_DSN=

# Contact form email service
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# CONTACT_EMAIL=contact@nitsuah.io

# CMS (if you add one)
# CONTENTFUL_SPACE_ID=
# CONTENTFUL_ACCESS_TOKEN=

# Database (if you add one)
# DATABASE_URL=
# REDIS_URL=

# ====================
# Deployment
# ====================
# Auto-populated by hosting providers
# VERCEL_URL=
# NETLIFY_URL=
